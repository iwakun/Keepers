    </div>

    <div class="slides" data-component="loop-slide">
        <div class="slides-container" data-ls="slide-viewport">
            <?php $current_post_id = $post->ID; ?>
            <?php echo 'catcat'.$category_id ?>
            <?php $related = baf_get_related($category_id) ?>
            <?php if($related->have_posts()): while($related->have_posts()): $related->the_post(); ?>
                <?php if($current_post_id == $post->ID) continue; ?>
                <?php $related_image_url = wp_get_attachment_image_src(get_post_thumbnail_id($post->ID), 'full') ?>
                <div
                    class="slide"
                    data-ls="slide"
                    style="background-image: url(<?= $related_image_url[0] ?>)">
                    <div class="slide-mask"></div>
                    <div class="slide-inner">
                        <div class="slide-text">
                            <h3>
                                <a href="<?php the_permalink(); ?>">
                                    <?php the_title(); ?>
                                </a>
                            </h3>
                            <hr>
                            <p><?= get_the_date('F j, Y'); ?></p>
                        </div>
                    </div>
                </div>
            <?php endwhile; endif; wp_reset_query(); ?>
        </div>
        <h2>Related Articles</h2>
        <div class="slides-navigation">
            <div class="wrapper">
                <div class="action next" data-ls="right">
                    <span class="fa fa-angle-right"></span>
                </div>
                <div class="action prev" data-ls="left">
                    <span class="fa fa-angle-left"></span>
                </div>
            </div>
        </div>
    </div>
</section>
<?php get_footer(); ?>
