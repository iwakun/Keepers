<?php get_header(); ?>
<?php $categories = wp_get_post_categories($post->ID) ?>
<?php $category_id = $categories[0]; ?>
<main class="single" role="main">
    <?php // Function for tracking post views -- functions.php ?>
    <?php setPostViews(get_the_ID()); ?>
    <div class="wrapper">
        <div class="social-single">
            <ul class="social">
                <li>
                    <a
                        target="_blank"
