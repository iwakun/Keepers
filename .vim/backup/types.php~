<?php $purchase_options = $course->getStandardPurchaseOptions(); ?>
<div class="overlay overlay-purchase-options modal" id="purchase-options-<?php echo $course->id; ?>">
    <div class="modal-header">
        <h2>
            Enroll Today!
        </h2>
        <p><?= $course->getTitle(); ?></p>
    </div>
    <div class="modal-body">
        <?php if(isset($purchase_options['30'])): ?>
            <h3>
                Purchase this course for less than
                <?= Purchaseoption::priceFormat($purchase_options['30']['price'] / 30) ?>/day
            </h3>
        <?php endif; ?>
        <form class="form" data-component="purchase-option" data-po-course="<?= $course->id ?>">
            <div class="purchase-option-boxes">
                <?php if(isset($purchase_options['30']) && $purchase_options['30']['status'] == 1): ?>
                    <div class="purchase-option-box">
                        <h4>30 Days</h4>
                        <div class="price">
                            <?= Purchaseoption::priceFormat($purchase_options['30']['price']) ?>
                        </div>
                        <input
                            type="radio"
                            name="purchase_option"
                            data-po-option="<?= $purchase_options['30']['id'] ?>"
                            value="<?= $purchase_options['30']['price'] ?>">
                    </div>
                <?php endif; ?>
                <?php if(isset($purchase_options['90']) && $purchase_options['90']['status'] == 1): ?>
                    <div class="purchase-option-box">
                        <h4>90 Days</h4>
                        <div class="price">
                            <?= Purchaseoption::priceFormat($purchase_options['90']['price']) ?>
                        </div>
                        <?php if(
                            $course->isOneDollarADayCourse() &&
                            $purchase_options['90']['price'] < 90
                        ): ?>
                            <?php $percent_saved = ceil(((90 - $purchase_options['90']['price']) / 90) * 100); ?>
                            <p class="save">(Save <?= $percent_saved ?>%)</p>
                        <?php endif; ?>
                        <?php if(
                            $course->isTwoDollarADayCourse() &&
                            $purchase_options['90']['price'] < 180
                        ): ?>
                            <?php $percent_saved = ceil(((180 - $purchase_options['90']['price']) / 180) * 100); ?>
                            <p class="save">(Save <?= $percent_saved ?>%)</p>
                        <?php endif; ?>
                        <input
                            type="radio"
                            name="purchase_option"
                            checked="checked"
                            data-po-option="<?= $purchase_options['90']['id'] ?>"
                            value="<?= $purchase_options['90']['price'] ?>">
                    </div>
                <?php endif; ?>
                <?php if(isset($purchase_options['year']) && $purchase_options['year']['status'] == 1): ?>
                    <div class="purchase-option-box best-value">
                        <h4>1 Year</h4>
                        <div class="price">
                            <?= Purchaseoption::priceFormat($purchase_options['year']['price']) ?>
                        </div>
                        <input
                            type="radio"
                            name="purchase_option"
                            <?php if(count($purchase_options) == 1): ?>
                                checked="checked"
                            <?php endif; ?>
                            data-po-option="<?= $purchase_options['year']['id'] ?>"
                            value="<?= $purchase_options['year']['price'] ?>">
                        <p class="purchase-option-focus">
                            Best Deal <br>
                            Only
                            <?= Purchaseoption::priceFormat($purchase_options['year']['price'] / 365) ?>/day!
                        </p>
                    </div>
                <?php endif; ?>
            </div>
            <button class="button-primary-large" type="submit">
                Add to Cart
            </button>
        </form>

    </div>
</div>
